{
	"name": "product-discription-svelte",
	"version": "0.0.1",
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"private": true,
	"scripts": {
		"postinstall": "prisma generate",
		"local mysql stop": "sudo /etc/init.d/mysql stop",
		"docker up": "docker-compose up -d",
		"docker down": "docker-compose down",
		"dev": "vite dev",
		"build": "prisma generate && vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"--------------- docker -----------------": "",
		"docker-dev": "docker exec -it sveltekit npm run dev",
		"docker-build": "docker exec -it sveltekit npm run build",
		"--------------- prism -----------------": "",
		"prisma:push:generate:seed": "npm run prisma:push && npm run prisma:generate && npm run prisma:seed",
		"prisma:push": "prisma db push",
		"prisma:generate": "prisma generate",
		"prisma:studio": "prisma studio",
		"prisma:seed": "prisma db seed",
		"---------------- Planet Scale CLI -----------------": "",
		"pscale:connect:main": "pscale connect dis-scription main --port 3309",
		"pscale:connect:dev": "pscale connect dis-scription development --port 3309",
		"---------------- Stripe CLI -----------------": "",
		"start webhook tester": "stripe listen --forward-to localhost:8080/api/webhook"
	},
	"devDependencies": {
		"@iconify/svelte": "^3.1.4",
		"@playwright/test": "^1.28.1",
		"@skeletonlabs/skeleton": "^2.0.0-rc.1",
		"@skeletonlabs/tw-plugin": "^0.1.0-rc.5",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-vercel": "^3.1.0",
		"@sveltejs/kit": "^1.20.4",
		"@types/node": "^20.10.4",
		"@types/sharp": "^0.32.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"prisma": "^5.7.1",
		"stripe": "^14.8.0",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"svelte-scrollto": "^0.2.0",
		"svelte-stripe": "^1.1.3",
		"tailwindcss": "^3.3.2",
		"ts-node": "^10.9.2",
		"tslib": "^2.4.1",
		"tsx": "^4.6.2",
		"typescript": "^5.3.3",
		"vite": "^4.3.6",
		"vitest": "^0.32.2",
		"zod": "^3.21.4"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.5.3",
		"@google-cloud/storage": "^7.7.0",
		"@lucia-auth/adapter-prisma": "^3.0.2",
		"@lucia-auth/oauth": "^3.5.0",
		"@prisma/client": "^5.7.1",
		"@sveltejs/adapter-node": "^1.2.4",
		"bcrypt": "^5.1.1",
		"lucia": "^2.7.4",
		"lucia-sveltekit": "^0.14.3",
		"openai": "^4.1.0",
		"resend": "^2.1.0",
		"sharp": "^0.32.6",
		"zod-form-data": "^2.0.1"
	}
}